
<form class="login_form" method="post" action="login">
  <div class="form">
    <div class="title">Log-In</div>
    <div class="input-container ic1">
      <input id="userid" class="input" type="text" placeholder=" " name="userid" />
      <div class="cut"></div>
      <label for="userid" class="placeholder">Username</label>
    </div>
    <div class="input-container ic2">
      <input id="userpass" class="input" type="password" placeholder=" " name="password" />
      <div class="cut"></div>
      <label for="userpass" class="placeholder">Password</label>
      <i class="fa-solid fa-eye" id="eye"></i>
    </div>
    <center>
      <%- message %>
      <div class="registration_button">
        <a href="/register">Register</a>
      </div>
    </center>
    <input class="submit" type="submit" name="choice" value="Login" />
    <input class="submit" type="submit" name="choice" value="Clear" />
  </div>
</form>
<script>
  const passwordInput = document.querySelector("#userpass")
  const eye = document.querySelector("#eye")

  eye.addEventListener("click", function () {
    this.classList.toggle("fa-eye-slash")
    const type = passwordInput.getAttribute("type") === "password" ? "text" : "password"
    passwordInput.setAttribute("type", type)
  })
</script>